manifest {
  description = 'Proof of concept of a Rna-seq pipeline implemented with Nextflow' 
  nextflowVersion = '>= 20.01.0'
}

plugins {
  id 'nf-amazon@1.3.4'
}

process {
  container = 'lhr.ocir.io/lroue8qm7xvd/nextflow_jobs/rnatoy:latest'
}

profiles {
 oci {
   params.reads = "s3://dasl-dev/data/ggal/*_{1,2}.fq"
   params.annot = "s3://dasl-dev/data/ggal/ggal_1_48850000_49020000.bed.gff"
   params.genome = "s3://dasl-dev/data/ggal/ggal_1_48850000_49020000.Ggal71.500bpflank.fa"
 
  aws {
  region = 'uk-london-1'
    client {
      uploadChunkSize = 10485760
      s3PathStyleAccess = true
      protocol = 'HTTPS'
      connectionTimeout = '2000'
      endpoint  = 'https://lroue8qm7xvd.compat.objectstorage.uk-london-1.oraclecloud.com/'
     }
    }
    
  }
  
}
